def greet(name="guest"):
    '''greet a person by their name'''
    return f"Hwllo,{name}!"
print(greet())
print(greet("Alice"))
def introduce(name,age):
    return f"my name  is {name},and my age is {age}years old."
print(introduce(name="sahwn",age=26))
def square(number):
    return number ** 2  
result = square(5)
print(result)   
#lambda function for adding two numbers
add = lambda x, y: x+ y
print(add(3 , 5))
def factorial(n):
    if n == 1:
        return 1
    return n * factorial(n-1)
print(factorial(7))